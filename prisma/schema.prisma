generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model admin {
  id       String @id @map("_id")
  email    String @unique
  password String
}

type audios {
  english   String
  tamil     String
  hindi     String
  telugu    String
  malayalam String
}

type videos {
  english   String
  tamil     String
  hindi     String
  telugu    String
  malayalam String
}

model video {
  id              String   @id @map("_id")
  content         String
  images          String[]
  enhanced_images String[]
  video_url       videos
  audio_url       audios
}
